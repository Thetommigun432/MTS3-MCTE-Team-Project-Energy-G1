{
    "$schema": "https://railway.com/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "apps/backend/Dockerfile",
        "watchPatterns": [
            "/apps/backend/**",
            "/railway.json"
        ]
    },
    "deploy": {
        "healthcheckPath": "/live",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE"
    }
}