{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Model Registry",
  "description": "Schema for NILM inference service model registry",
  "type": "object",
  "required": ["models"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "models": {
      "type": "object",
      "description": "Map of appliance IDs to model configurations",
      "additionalProperties": {
        "$ref": "#/definitions/ModelConfig"
      }
    },
    "defaults": {
      "$ref": "#/definitions/DefaultConfig"
    }
  },
  "definitions": {
    "ModelConfig": {
      "type": "object",
      "required": ["model_path", "model_version", "model_type"],
      "properties": {
        "model_path": {
          "type": "string",
          "description": "Path to the model file (.pth)"
        },
        "model_version": {
          "type": "string",
          "pattern": "^v?[0-9]+\\.[0-9]+\\.[0-9]+$",
          "description": "Semantic version of the model"
        },
        "model_type": {
          "type": "string",
          "enum": ["cnn", "unet", "transformer", "lstm"],
          "description": "Architecture type (must match models.py)"
        },
        "input_features": {
          "type": "integer",
          "minimum": 1,
          "default": 7,
          "description": "Number of input features/channels"
        },
        "sequence_length": {
          "type": "integer",
          "minimum": 1,
          "default": 60,
          "description": "Expected input sequence length"
        },
        "description": {
          "type": "string",
          "description": "Human-readable model description"
        },
        "normalization": {
          "type": "object",
          "properties": {
            "mean": {
              "type": "array",
              "items": { "type": "number" }
            },
            "std": {
              "type": "array",
              "items": { "type": "number" }
            }
          },
          "description": "Normalization parameters for input preprocessing"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "Model creation timestamp"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        }
      }
    },
    "DefaultConfig": {
      "type": "object",
      "properties": {
        "model_type": {
          "type": "string",
          "enum": ["cnn", "unet", "transformer", "lstm"]
        },
        "input_features": {
          "type": "integer",
          "minimum": 1
        },
        "sequence_length": {
          "type": "integer",
          "minimum": 1
        }
      },
      "description": "Default values for model configurations"
    }
  }
}
